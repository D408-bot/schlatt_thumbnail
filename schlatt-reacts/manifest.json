
{
    "manifest_version": 3,
    "name": "Schlatt Thumbnail Fixer",
    "version": "1.0",
    "description": "Puts “schlatt” in every youtube thumbnail",
    "permissions":[
        "activeTab",
        "tabs",
        "<all_urls>"
    ],
    
    "web_accessible_resources" : [{
        
        "resources": ["/images/*"],
        "matches": ["<all_urls>"]
    }
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    
    "icons": {
        "16": "/logos/schlatt16.png",
        "48": "/logos/schlatt48.png",
        "128": "/logos/schlatt128.png"
    },
    "browser_action":{
        "default_title": "Slagg"
    }
  }

    